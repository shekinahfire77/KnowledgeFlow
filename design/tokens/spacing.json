{
  "$schema": "https://json-schema.org/draft-07/schema",
  "description": "KnowledgeFlow Design System - Spacing & Layout Tokens",
  "version": "0.1.0",
  "spacing": {
    "0": "0",
    "1": "4px",
    "2": "8px",
    "3": "12px",
    "4": "16px",
    "5": "20px",
    "6": "24px",
